#!/bin/sh
#
# Usage: extract <file>
# Simple archive extraction
extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.gz|*.tgz) tar -xzf "$1" ;;
            *.tar.bz2|*.tbz2) tar -xjf "$1" ;;
            *.tar) tar -xf "$1" ;;
            *.zip) unzip "$1" ;;
            *.dmg) hdiutil mount "$1" ;;
            *) echo "Unsupported format: $1" ;;
        esac
    else
        echo "File not found: $1"
    fi
}
